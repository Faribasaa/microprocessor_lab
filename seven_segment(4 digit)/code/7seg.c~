#include <mega16.h>
#include <delay.h>
 
    #define DIG_1   0b11111110
    #define DIG_2   0b11111101
    #define DIG_3   0b11111011
    #define DIG_4   0x11110111
    unsigned char numbers[]={0x3f,0x06,0x5b,0x4f,0x66,0x6d,0x7d,0x07,0x7f,0x67};
    int digits[] = {DIG_1, DIG_2, DIG_3, DIG_4};
    int count = -1;
    int counter,D1,D2,D3,D4;  
     
// Declare your global variables here

// Timer 0 overflow interrupt service routine
interrupt [TIM0_OVF] void timer0_ovf_isr(void)
{
// Reinitialize Timer 0 value
TCNT0=0x64;
// Place your code here
counter ++;
if (counter ==3){
   
    D1 = count % 10;
    PORTC = digits[0];
    PORTD = numbers[D1];
    delay_ms(75); 
    PORTC=0xFF;
    PORTD=0x00;
     
                 
    D2 = (count%100) / 10;
    PORTC = digits[1];
    PORTD = numbers[D2]; 
    delay_ms(75);
    PORTC=0xFF;
    PORTD=0x00;
      
    
    D3 = count% 1000;
    PORTC = digits[2];
    PORTD = numbers[D3];
    delay_ms(75);  
    PORTC=0xFF;
    PORTD=0x00;
      
    
    D4 = (count %1000) /100;
    PORTC = digits[3];
    PORTD = numbers[D4]; 
    delay_ms(75);
    PORTC=0xFF;
    PORTD=0x00;
      
    
     counter=0;	
            
	}    
}
 


// Timer1 overflow interrupt service routine
interrupt [TIM1_OVF] void timer1_ovf_isr(void)
{
// Reinitialize Timer1 value
TCNT1H=0xBDC >> 8;
TCNT1L=0xBDC & 0xff;
 
// Place your code here
   
      if (count < 10000) {
           count++;
		} 
        
	  else{
	        count = 0;
	      }
	    
     
   }
 

